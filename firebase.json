{
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "cc-game-server",
                    "region": "asia-northeast1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "/**/*.{png,jpg,jpeg,gif,webp,ico}",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=604800, immutable"
                    }
                ]
            },
            {
                "source": "/**/*.{js,css}",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=3600"
                    }
                ]
            },
            {
                "source": "/data/*.json",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=300"
                    }
                ]
            }
        ]
    },
    "emulators": {
        "firestore": {
            "port": 8081
        },
        "ui": {
            "enabled": true,
            "port": 4000
        }
    }
}
